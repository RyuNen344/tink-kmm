{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base",
    // https://github.com/whitesource/merge-confidence
    "github>whitesource/merge-confidence:beta"
  ],
  packageRules: [
    {
      groupName: "gh-actions",
      prPriority: -1,
      matchManagers: [
        "github-actions"
      ],
      matchDatasources: [
        "github-tags"
      ],
      matchUpdateTypes: [
        "minor",
        "patch"
      ],
      automerge: true,
      platformAutomerge: true,
      pinDigests: true,
    },
  ],
}
