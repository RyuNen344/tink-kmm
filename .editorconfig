root=true

[*]
charset=utf-8
end_of_line=lf
indent_size=4
indent_style=space
insert_final_newline=true
max_line_length=100
tab_width=4

[{*.bash,*.sh,*.zsh}]
indent_size=2
tab_width=2

[{*.har,*.json,*.json5}]
indent_size=2

[{*.toml,*.yaml,*.yml}]
indent_size=2

[*.{ts,tsx,js}]
max_line_length=120

[*.{kt,kts}]
max_line_length=120

[*.mustache]
insert_final_newline=false

[Makefile]
indent_style=tab
